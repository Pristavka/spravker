{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true,
      "classes": true
    },
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": 1,
    "no-extra-semi": 1,
    "no-alert": 1,
    "no-else-return": 1,
    "no-eval": 1,
    "no-extra-bind": 1
  }
}
